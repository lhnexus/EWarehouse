<mvc:View controllerName="Canvas.Track.rack_num" xmlns="sap.suite.ui.microchart" xmlns:mvc="sap.ui.core.mvc" xmlns:m="sap.m"
	xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:core="sap.ui.core">
	<m:Page id="page" showHeader="false">
			<l:VerticalLayout>
				<l:content>
					<m:Label text="Number of Racks" class="subtitle"/>
					<l:HorizontalLayout>
						<m:FlexBox justifyContent="End">
							<core:Icon id="rackicon" src="sap-icon://fridge" class="sapUiMediumMarginEnd sapUiTinyMarginTop" size="2rem" press="handleStethoscopePress">
							</core:Icon>
						</m:FlexBox>
						<m:NumericContent id="racknum" value="{/Counters/rnum}" withMargin="false"/>
					</l:HorizontalLayout >
				</l:content>
			</l:VerticalLayout>

	</m:Page>
</mvc:View>